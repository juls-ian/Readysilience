<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExpandedViews.AnnouncementExpandedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/back_button"
            android:background="@drawable/icon_back"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:elevation="4dp"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/announcement_title"
            android:text="Announcement Title"
            android:textSize="25sp"
            android:fontFamily="@font/alata"
            android:textStyle="bold"

            android:gravity="top|left"
            android:textColor="@color/blue"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="15dp"/>

        <TextView
            android:id="@+id/announcement_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/alata"
            android:gravity="top|left"
            android:text="Announcement Date"
            android:textColor="@color/blue1"
            android:textSize="15sp"
            android:textStyle="normal" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="300dp"
            android:id="@+id/announcement_banner"
            android:src="@drawable/images_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/announcement_details"
            android:text="Announcement Details"
            android:textSize="15sp"
            android:fontFamily="@font/alata"
            android:textStyle="normal"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:layout_marginHorizontal="15dp"/>









    </LinearLayout>

</ScrollView>