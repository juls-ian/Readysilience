<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    android:gravity="center"
    android:orientation="horizontal">



    <com.google.android.material.card.MaterialCardView
        android:layout_width="310dp"
        android:layout_height="240dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="4dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/disaster_pic"
            android:src="@drawable/earthquake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:maxHeight="100dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/bg"
            android:src="@drawable/disasters_cont_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/disaster_name"
                android:text="Earthquake"
                android:paddingLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/bg"
                android:paddingTop="45dp"
                android:fontFamily="@font/alata"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="25sp"
                tools:ignore="NotSibling" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/disaster_desc"
                android:text=""
                android:paddingLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/disaster_name"
                android:fontFamily="@font/alata"
                android:textColor="@color/white"
                android:textSize="13sp"
                tools:ignore="NotSibling" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/disaster_desc"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/disaster_type_pic"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/disaster_type"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/disaster_type"
                    android:text="Natural"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/alata"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:ignore="NotSibling" />

                <ImageView
                    android:id="@+id/prone_level_pic"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/prone_level"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/prone_level"
                    android:text="Prone"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/alata"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:ignore="NotSibling" />

                <ImageView
                    android:id="@+id/disaster_related_news"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/disaster_related_news"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recent_act"
                    android:text="Active"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/alata"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:ignore="NotSibling" />

            </LinearLayout>





        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>




</RelativeLayout>
