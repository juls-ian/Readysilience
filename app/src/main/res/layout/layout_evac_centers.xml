<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="250dp"
        android:layout_height="310dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/evacuation_center_pic"
                    android:src="@drawable/disaster_earthquake"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"


                    />
            </androidx.cardview.widget.CardView>

            <!--NAME AND LOC-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|left"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:elevation="5dp">

                <TextView
                    android:id="@+id/evac_center_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="155dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/alatsi"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Sta. Ana Basketball Court"
                    android:textColor="@color/blue1"
                    android:textSize="16sp"
                    android:textStyle="bold"

                    />

                <ImageView
                    android:id="@+id/evac_loc_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/evac_center_name"
                    android:src="@drawable/icon_evacenter" />

                <TextView
                    android:id="@+id/evac_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="183dp"
                    android:layout_toRightOf="@+id/evac_loc_icon"
                    android:fontFamily="@font/alatsi"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Brgy. Sta Ana"
                    android:textSize="13sp"

                    />
                
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/vector_door"
                    android:layout_marginTop="-20dp"
                    android:layout_marginStart="180dp"
                    android:background="@android:color/transparent"
                    android:layout_below="@+id/evac_center_name"
                    />
                


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="215dp">

                    <ImageView
                        android:id="@+id/waterbottle_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_3needs_ready"
                        android:contentDescription="Waterbottle"
                        android:src="@drawable/icon_bottlewater" />

                    <TextView
                        android:id="@+id/needs_water"
                        android:layout_width="50sp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/waterbottle_icon"
                        android:fontFamily="@font/alatsi"
                        android:gravity="center"
                        android:text="Equipped"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="215dp">

                    <ImageView
                        android:id="@+id/can_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_3needs_ready"
                        android:src="@drawable/icon_can"

                        />

                    <TextView
                        android:id="@+id/needs_can"
                        android:layout_width="50sp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/can_icon"
                        android:layout_marginLeft="60dp"
                        android:fontFamily="@font/alatsi"
                        android:gravity="center"
                        android:text="Equipped"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="215dp">

                    <ImageView
                        android:id="@+id/blanket_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="130dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_3needs_not"
                        android:contentDescription="Medic"
                        android:src="@drawable/icon_blanket" />

                    <TextView
                        android:id="@+id/needs_blanket"
                        android:layout_width="50sp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/blanket_icon"
                        android:layout_marginLeft="120dp"
                        android:fontFamily="@font/alatsi"
                        android:gravity="center"
                        android:text="Need Donation"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="215dp">

                    <ImageView
                        android:id="@+id/medic_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="130dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_3needs_not"
                        android:contentDescription="Blanket"
                        android:src="@drawable/icon_medicsupp" />

                    <TextView
                        android:id="@+id/needs_medic"
                        android:layout_width="50sp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/medic_icon"
                        android:layout_marginLeft="120dp"
                        android:fontFamily="@font/alatsi"
                        android:gravity="center"
                        android:text="Need Donation"
                        android:textSize="12sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/center_availability"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="155dp"
                        android:layout_marginTop="115dp"
                        android:background="@drawable/bg_evac_available"
                        android:fontFamily="@font/alatsi"
                        android:padding="4dp"
                        android:text="Available"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textStyle="bold"

                        />
                </RelativeLayout>


            </RelativeLayout>




        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>




</RelativeLayout>
