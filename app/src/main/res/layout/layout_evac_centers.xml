<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="250dp"
        android:layout_height="310dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/evacuation_center_pic"
                    android:src="@drawable/earthquake"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"


                    />
            </androidx.cardview.widget.CardView>

            <!--NAME AND LOC-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:elevation="5dp">

                <TextView
                    android:id="@+id/evac_center_name"
                    android:text="Sta. Ana Basketball Court"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/alatsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/blue1"
                    android:padding="4dp"
                    android:textSize="18sp"
                    android:layout_marginTop="155dp"

                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/evac_loc_icon"
                    android:layout_below="@id/evac_center_name"
                    android:src="@drawable/icon_evacenter"/>

                <TextView
                    android:id="@+id/evac_location"
                    android:text="Brgy. Sta Ana"
                    android:gravity="center"
                    android:fontFamily="@font/alatsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:layout_marginTop="183dp"
                    android:layout_toRightOf="@+id/evac_loc_icon"

                    />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="215dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:id="@+id/waterbottle_icon"
                        android:src="@drawable/icon_bottlewater"
                        android:background="@drawable/bg_3needs_ready"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:contentDescription="Waterbottle" />

                    <TextView
                        android:id="@+id/needs_water"
                        android:text="Equipped"
                        android:gravity="center"
                        android:fontFamily="@font/alatsi"
                        android:layout_width="50sp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_below="@id/waterbottle_icon"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="215dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:id="@+id/can_icon"
                        android:background="@drawable/bg_3needs_ready"
                        android:src="@drawable/icon_can"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="5dp"

                        />

                    <TextView
                        android:id="@+id/needs_can"
                        android:text="Equipped"
                        android:gravity="center"
                        android:fontFamily="@font/alatsi"
                        android:layout_width="50sp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_below="@id/can_icon"
                        android:layout_marginLeft="60dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="215dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:id="@+id/blanket_icon"
                        android:layout_marginLeft="130dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/icon_blanket"
                        android:background="@drawable/bg_3needs_not"
                        android:contentDescription="Medic" />

                    <TextView
                        android:id="@+id/needs_blanket"
                        android:text="Need Donation"
                        android:gravity="center"
                        android:fontFamily="@font/alatsi"
                        android:layout_width="50sp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_below="@id/blanket_icon"
                        android:layout_marginLeft="120dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="215dp"
                    android:layout_marginLeft="60dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:id="@+id/medic_icon"
                        android:layout_marginLeft="130dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/icon_medicsupp"
                        android:background="@drawable/bg_3needs_not"
                        android:contentDescription="Blanket" />

                    <TextView
                        android:id="@+id/needs_medic"
                        android:text="Need Donation"
                        android:gravity="center"
                        android:fontFamily="@font/alatsi"
                        android:layout_width="50sp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_below="@id/medic_icon"
                        android:layout_marginLeft="120dp"
                        />
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/center_availability"
                        android:background="@drawable/bg_evac_available"
                        android:text="Available"
                        android:textStyle="bold"
                        android:fontFamily="@font/alatsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:padding="4dp"
                        android:textSize="13sp"
                        android:layout_marginTop="115dp"
                        android:layout_marginLeft="155dp"

                        />
                </RelativeLayout>




            </RelativeLayout>




        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>




</RelativeLayout>
