<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">



    <com.google.android.material.card.MaterialCardView
        android:layout_width="295dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="4dp"
        app:cardCornerRadius="20dp">


        <ImageView
            android:id="@+id/firstaid_bg"
            android:src="@drawable/card_bg_firstaid1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:maxHeight="100dp"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="15dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/injury_pic"
                    android:src="@drawable/firstaid_basics"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/injury_name"
                android:text="Injury Name"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="120dp"
                android:fontFamily="@font/alata"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/injury_desc"
                android:text="Description"
                android:layout_below="@+id/injury_name"
                android:layout_marginLeft="120dp"
                android:fontFamily="@font/alata"
                android:textColor="@color/white"
                android:textSize="12sp"
                />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/injury_type_icon"
                android:src="@drawable/injury_burn_type"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="250dp"
                android:elevation="5dp"
                android:background="@drawable/bg_injury_type"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/injury_type_text"/>

        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>
</LinearLayout>